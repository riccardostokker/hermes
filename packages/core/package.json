      "types": "./dist/types/index.d.ts"
    }
  },
  "types": "./dist/types/index.d.ts",
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/jest": "^29.2.3",
    "@types/mdast": "^3.0.10",
    "@types/node": "^18.11.9",
    "@types/unist": "^2.0.6",
    "debug": "^4.3.4",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "remark": "^14.0.2",
    "remark-directive": "^2.0.1",
    "remark-frontmatter": "^4.0.1",
    "remark-math": "^5.1.1",
    "remark-parse": "^10.0.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.3",
    "unified": "^10.1.2",
    "vfile": "^5.3.5",
    "vite": "^3.2.4",
    "yaml": "^2.1.3"
  },
  "resolutions": {
    "@hermes-renderer/core": "workspace:*",
    "@hermes-renderer/vue": "workspace:*"
  }
